# Local development only - production secrets go in Cloudflare Worker dashboard

# Development mode
DEV_MODE="true"

# Application URL
APP_BASE_URL=https://yourdomain.com

# Encryption key - Generate with: openssl rand -base64 32
KEK_B64=TODO_base64_encoded_256_bit_key

# Session configuration
SESSION_IDLE_MIN=30
SESSION_ABSOLUTE_HOURS=12
MAGIC_LINK_TTL_MIN=10
ACCESS_CERTS_CACHE_MIN=5
RSVP_SUBMISSIONS_PER_10MIN=20

# Rate limiting
INVITES_PER_EMAIL_PER_HOUR=3
INVITES_PER_IP_PER_10MIN=5
VERIFY_PER_IP_PER_10MIN=15
VERIFY_PER_TOKEN_PER_10MIN=5
STRIPE_CREATE_PER_HOUR=10
STRIPE_STATUS_PER_HOUR=30

# Cloudflare Turnstile - Test keys that always pass
TURNSTILE_SITE_KEY=TODO_get_from_cloudflare_turnstile
TURNSTILE_SECRET_KEY=TODO_get_from_cloudflare_turnstile

# Cloudflare Access Gate - for /Admin Pages
ACCESS_AUD=TODO_cloudflare_access_audience_tag
ACCESS_JWT_ISS=https://your-team.cloudflareaccess.com

# Gmail API - From Google Cloud Console and OAuth Playground
GMAIL_CLIENT_ID=TODO_google_oauth_client_id
GMAIL_CLIENT_SECRET=TODO_google_oauth_client_secret
GMAIL_REFRESH_TOKEN=TODO_oauth_refresh_token
GMAIL_FROM=EMAILNAME <NAME@yourdomain.com>

# Stripe Secrets Test Envrionment
STRIPE_SECRET_KEY=TODO_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=TODO_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=TODO_stripe_webhook_secret
